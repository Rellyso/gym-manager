<div class="item">
    <div>URL do avatar</div>
    <input 
    type="url" 
    name="avatar_url" 
    placeholder="https://" 
    value="{{ instructor.avatar_url }}">
</div>

<div class="item">
    <div>Instrutor</div>
    <input 
    type="text" 
    name="name" 
    value="{{ instructor.name }}">
</div>

<div class="item">
    <div>Data de Nascimento</div>
    <input 
    type="date" 
    name="birth" 
    value="{{ instructor.birth }}">
</div>

<div class="item">
    <div>Sexo</div>

    <span>
        <input 
        type="radio" 
        name="gender" 
        value="M" 
        {% if instructor.gender == 'M' %}
            checked
        {% endif %}
        >Masculino
    </span>

    <span>
        <input 
        type="radio" 
        name="gender" 
        value="F"
        {% if instructor.gender == 'F' %}
            checked
        {% endif %}
        >Feminino
    </span>
</div>

<div class="item">
    <div>Área de Atuação</div>

    <div>
        <input 
        type="text" 
        name="services" 
        placeholder="separe os serviços prestados por vírgula"
        value= "{{ instructor.services }}">
    </div>

</div>

<button type="submit">Salvar</button>